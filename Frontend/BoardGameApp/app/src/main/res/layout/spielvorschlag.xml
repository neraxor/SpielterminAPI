<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvSpielvorschlagBeschreibung"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Spielvorschlag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnJa"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btnJa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ja"
        app:layout_constraintStart_toEndOf="@+id/tvSpielvorschlagBeschreibung"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btnNein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nein"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/btnJa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
