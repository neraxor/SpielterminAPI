<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:background="@color/tan"
>
    <TextView
        android:id="@+id/pageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Board Gamer"
        android:textColor="@color/wheat"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginBottom="15dp" />

    <EditText android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@color/beige"
              android:hint="Benutzernamen"
            android:id="@+id/Benutzernamen"
        android:textColor="@color/black"
              android:layout_marginBottom="16dp"
    />
    <EditText android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@color/beige"
              android:hint="Password"
        android:id="@+id/Password"
        android:textColor="@color/black"
              android:inputType="textPassword"
              android:layout_marginBottom="16dp"
    />
    <EditText android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@color/beige"
              android:hint="Vorname"
        android:id="@+id/Vorname"
        android:textColor="@color/black"
              android:layout_marginBottom="16dp"
    />
    <EditText android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@color/beige"
              android:hint="Nachname"
        android:id="@+id/Nachname"
        android:textColor="@color/black"
              android:layout_marginBottom="16dp"
    />
    <EditText android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@color/beige"
              android:hint="Wohnort"
        android:id="@+id/Wohnort"
        android:textColor="@color/black"
              android:layout_marginBottom="16dp"
    />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
        <EditText android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:background="@color/beige"
                  android:hint="Strasse"
                          android:id="@+id/Strasse"
        android:textColor="@color/black"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="16dp"
                  android:layout_marginEnd="16dp"
        />
        <EditText android:layout_width="50dp"
                  android:layout_height="wrap_content"
                  android:background="@color/beige"
                  android:hint="H.-Nr."
            android:id="@+id/hausnummer"
            android:textColor="@color/black"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="16dp"
                  android:inputType="numberDecimal"
        />

    </LinearLayout>
    <EditText android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:background="@color/beige"
              android:hint="Postleitzahl"
              android:id="@+id/Postleitzahl"
              android:textColor="@color/black"
              android:layout_marginBottom="16dp"
    />

    <Button
            android:id="@+id/btnRegister"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@color/black"
            android:backgroundTint="@color/beige"

    />

</LinearLayout>