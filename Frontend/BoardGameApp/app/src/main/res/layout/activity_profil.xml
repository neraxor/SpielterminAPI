<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:textColor="@color/beige"
        android:textSize="30dp"
        android:id="@+id/tvProfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Name"
        android:id="@+id/tvProfilName"
        android:textColor="@color/beige"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvProfil"
        android:layout_marginTop="35dp"/>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProfilName"
        android:layout_above="@+id/navbar">

        <LinearLayout android:id="@+id/containerForCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/wheat"
        android:layout_alignParentBottom="true">

        <ImageButton android:id="@+id/home"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/wheat"
            android:background="@color/black"
            app:srcCompat="@drawable/home_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/create"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton android:id="@+id/create"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/wheat"
            android:background="@color/black"
            app:srcCompat="@drawable/create_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/home"
            app:layout_constraintEnd_toStartOf="@+id/profil"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton android:id="@+id/profil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/wheat"
            android:background="@color/black"
            app:srcCompat="@drawable/profil_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/create"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
